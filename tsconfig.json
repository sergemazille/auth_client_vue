{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env", "jest", "cypress"],
    "paths": {
      "@/*": ["src/*"],
      "@unit/*": ["tests/unit/*"],
      "@fixtures/*": ["./fixtures/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "fixtures/**/*.ts",
    "explore/**/*.ts",
    "shims-vue.d.ts"
  ],
  "exclude": ["node_modules"]
}
